{
  "$schema": "https://json.schemastore.org/tsconfig",
  "plugins": [
    {
      "name": "next"
    }
  ],
  "extends": "@jaden/typescript-config/base",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
